# Database Connection (Supabase PostgreSQL)
# Get from: Supabase Dashboard > Settings > Database > Connection string (URI)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# JWT Secret - MUST be a strong random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-random-jwt-secret-minimum-32-chars

# Frontend URL for CORS - MUST be set explicitly (no wildcards in production!)
# Examples: http://localhost:3000 (dev), https://your-app.vercel.app (prod)
FRONTEND_URL=http://localhost:3000

# Supabase Storage (optional - for optimized screenshot storage)
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# React App API URL (leave empty for same-origin Vercel deployment)
REACT_APP_API_URL=

# Optional: Gemini API for AI analysis features
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (for sending user credentials)
# Required for "Send login credentials via email" feature
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com

# Optional: Customize email branding
APP_NAME=Employee Monitor
COMPANY_NAME=Your Company
